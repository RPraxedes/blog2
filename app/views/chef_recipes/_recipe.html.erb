<% obj.each do |recipe| %>
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title"><%= link_to recipe.name, chef_recipe_path(recipe) %></h4>
          <p class="card-text"><%= recipe.description %></p>
          <%= link_to "Edit", edit_chef_recipe_path(recipe), class: "btn btn-warning" %>
          <%= link_to "Delete", chef_recipe_path(recipe), method: :delete, data: { confirm: "Are you sure you want to wa ha ha this recipe?" }, class: "btn btn-danger" %>
        </div>
      </div>
    </div>
  </div>
<% end %>

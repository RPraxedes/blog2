<h1>Recipe Index</h1>
<% @recipes.each do |recipe| %>
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title"><%= link_to recipe.name, chef_recipe_path(recipe) %></h4>
          <p class="card-text"><%= recipe.description %></p>
        </div>
      </div>
    </div>
  </div>
<% end %>

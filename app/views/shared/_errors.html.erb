<% if obj.errors.any? %>
  <div class="row">
    <div class="col-md-8">
      <div class="alert alert-danger">
        <p class="alert-body">
          <strong><%= pluralize(obj.errors.count, "error") %> prohibited this <%= obj.class %> from being created:</strong>
        </p>
        <ul>
        <% obj.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  </div>
<% end %>
